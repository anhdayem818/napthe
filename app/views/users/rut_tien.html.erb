<div class="container" style="min-height: 67vh;">
  <div class="pt-5 row ">
    <div class="col-md-12">
      <div clas="jumbotron">
        <h3 class="">Thông tin tài khoản</h3>
        <p class="lead"> Email: <%= current_user.email %> </p>
        
        <p class=""> Số tiền : <%= format_tien current_user.xu %> </p>
      </div>
      <hr class="my-4">
    </div>
    <div class="col-md-12">
      <%= form_for(@order, remote: true) do |f| %>
        <h3 class="">Nhập số tiền cần rút</h3>
        <%= f.hidden_field :loai_thanh_toan, value: 'rut_tien' %>
        <div class="form-group row">
          <%= f.label :so_tien, "Số tiền",class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.number_field :so_tien, placeholder: "10000", class: "form-control"%>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12 text-center">
            <button type="submit" class="btn btn-primary"> Gởi Yêu cầu rút tiền</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

