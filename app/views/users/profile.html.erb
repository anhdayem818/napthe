<div class="container">
  <%= render "shared/banner_main" %>
  <br>
  <br>
  <div>
    <h3>
      Link ref để giới thiệu bạn bè:
    </h3>
    <%= link_to "https://santhe86.com/users/sign_up?ref_id=#{current_user.id}", "" %>
  </div>
  <hr>
  <h3>  User đã giới thiệu </h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email </th>
        <th scope="col"> </th>

      </tr>
    </thead>
    <tbody>
      <%- @users.each_with_index do |u,i| %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= u.email%> </td>
          <td><%= order.preferred_nha_mang%> </td>
          <td><%= u.created_at.strftime("%d/%m/%Y") %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>